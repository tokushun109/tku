$font-face = 'M PLUS Rounded 1c', sans-serif
$title-font-face = 'Lobster'
$title-font-weight = 700
/**
 * media size
 */
$lg-width = 1264px
$md-width = 960px
$sm-width = 600px
$font-xxlarge = 24px
/**
 * font size
 */
$font-xlarge = 20px
$font-large = 18px
$font-normal = 16px
$font-medium = 14px
$font-small = 10px
$font-tiny = 8px
/**
 * colors
 */
$primary = #4caf50
$secondary = #8bc34a
$accent = #cddc39
$error = #fce4ec
$warning = #fff9c4
$info = #a7ffeb
$success = #b3e5fc
$site-title-text-color = #616161
$title-text-color = #2E7D32
$text-color = #757575
$primary-bg-color = #FFFFFF
$secondary-bg-color = #F5F5F5
$light-bg-color = #F1F8E9
$light-dark-color = #bababa
$danger-color = #b84150
$danger-bg-color = #f8d7da
$danger-border-color = #f5c6cb
$page-background-color = #f5f5f5
$white-color = #fff
/**
 * page layout
 */
$page-padding = 48px 0 0
$page-sp-padding = 0
$page-title-text-align = center
$page-title-margin-bottom = 20px
$page-title-underline = true
$page-title-underline-color = #45a8a1
$page-title-underline-width = 100px
$page-content-section-margin-bottom = 16px

.page-title
    margin-bottom 20px
    color $site-title-text-color
    text-align center
    font-size 70px !important
    font-family $title-font-face !important

/**
 * image layout
 */
$image-border-radius = 24px
/**
 * form layout
 */
$form-padding = 16px
$form-bordered-padding = 16px 32px
$form-bordered-border-color = $primary-color
$form-bordered-border-radius = 6px
$form-bordered-bg-color = #fafafa
$form-sp-padding = 8px
$form-title-text-align = center
$form-title-margin-bottom = 20px
$form-title-underline = true
$form-title-underline-color = $primary-color
$form-title-underline-width = 30px
$form-item-margin = 16px
$form-item-font-size = 20px
$form-item-inline-label-width = 200px
/**
 * column layout
 */
$column-spacing = 16px
$tile-spacing = 16px
/**
 * label layout
 */
$c-label-required-content = '必須'
$c-label-required-color = #ff5a5a
$c-label-required-weight = bold
$c-label-required-size = 13px
